<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_bg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="13dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp" >

    <CheckBox
        android:id="@+id/cb_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/checkbox_green_background_selector"
        android:button="@drawable/checkbox_button_selector"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" />

    <CheckBox
        android:id="@+id/cb_loser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/checkbox_red_background_selector"
        android:button="@drawable/checkbox_button_selector"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" />

    <TextView
        android:id="@+id/tv_playername"
        style="@style/BigFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>